{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Installing Dependencies",
      "command": "yarn install"
    },
    {
      "name": "Build Project",
      "command": "yarn build"
    },
    {
      "name": "Remove Old Dist",
      "command": "rm -rf dist || true"
    }
  ],
  "tasks": {
    "develop": {
      "name": "develop",
      "command": "yarn develop",
      "runAtStart": false
    },
    "start": {
      "name": "start",
      "command": "yarn start",
      "runAtStart": true,
      "preview": {
        "port": 1337
      }
    }
  }
}
