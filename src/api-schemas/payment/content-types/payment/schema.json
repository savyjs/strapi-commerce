{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "payment_id": {
      "type": "string",
      "required": true
    },
    "payment_mode": {
      "type": "string",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "amount_refunded": {
      "type": "decimal",
      "required": true
    },
    "bank_charges": {
      "type": "decimal",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true
    },
    "reference_number": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "customer_id": {
      "type": "string",
      "required": true
    },
    "customer_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "tax_amount_withheld": {
      "type": "decimal"
    },
    "exchange_rate": {
      "type": "decimal",
      "default": 1
    },
    "currency_id": {
      "type": "string",
      "required": true
    },
    "currency_code": {
      "type": "string",
      "required": true
    },
    "currency_symbol": {
      "type": "string",
      "required": true
    },
    "account_id": {
      "type": "string",
      "required": true
    },
    "account_name": {
      "type": "string",
      "required": true
    },
    "tax_account_id": {
      "type": "string"
    },
    "tax_account_name": {
      "type": "string"
    },
    "unused_amount": {
      "type": "decimal"
    },
    "last_four_digits": {
      "type": "integer"
    },
    "custom_fields": {
      "type": "json"
    }
  }
}
